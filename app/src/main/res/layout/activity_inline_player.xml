<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fitsSystemWindows="true"
tools:context="babator.com.sdkdemo.PlayerActivityInline">

<android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.AppBarOverlay">
</android.support.design.widget.AppBarLayout>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="5sp"
    android:layout_marginEnd="5sp">

        <LinearLayout
            android:id="@+id/LinearLayoutAbove"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10sp"
            >
                <TextView
                    android:id="@+id/tvSampleTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/text_sample_above"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="20dp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutVideoView"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_below="@+id/LinearLayoutAbove"
            >

                <VideoView
                    android:id="@+id/video_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/adContainer">

                </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutBelow"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_below="@+id/LinearLayoutVideoView"
            >

                <TextView
                    android:id="@+id/tvSampleBottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/text_sample_below"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutBelow2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_below="@+id/LinearLayoutBelow"
            >

                <TextView
                    android:id="@+id/tvSampleBottom2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/text_sample_below2"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="20dp"/>

        </LinearLayout>

</RelativeLayout>

</android.support.design.widget.CoordinatorLayout>


