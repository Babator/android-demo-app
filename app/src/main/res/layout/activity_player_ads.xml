<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlayerActivityAds"
    tools:ignore="MergeRootFrame">

        <fragment
            android:name="android_demo_app.babator.com.androiddemoapp.PlayerActivityAds$VideoFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4" />

        <fragment
            android:name="android_demo_app.babator.com.androiddemoapp.PlayerActivityAds$VideoDescriptionFragment"
            android:id="@+id/videoDescription"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6" />
</LinearLayout>
